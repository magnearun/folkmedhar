<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="90dp"
    tools:context="com.example.folkmedhar.pantanir.bokun.Skref2" >


    <TextView
        android:id="@+id/dagur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_label"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:text="@string/dagur" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timi_text"
        android:layout_marginTop="100dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonDagur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dagur"
        android:layout_alignBottom="@+id/dagur"
        android:layout_marginLeft="72dp"
        android:layout_toRightOf="@+id/dagur"
        android:onClick="showDatePickerDialog"
        android:text="@string/pick_date"
        android:width="200dp"
        android:textSize="15sp"
        style="@style/buttonStyle"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/skref2_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDagur"
        android:layout_alignLeft="@+id/dagur"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonDagur"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/infobackground"
        android:height="20dp"
        android:padding="20sp"
        android:text="@string/skref2_info"
        android:textSize="15sp" />

    <Button
        android:id="@+id/afram2"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tilbaka"
        android:layout_alignBottom="@+id/tilbaka"
        android:layout_alignRight="@+id/timi"
        android:text="@string/afram" />

    <Button
        android:id="@+id/tilbaka"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_label"
        android:layout_alignParentBottom="true"
        android:text="@string/tilbaka" />

    <Spinner
        android:id="@+id/timi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonDagur"
        android:layout_below="@+id/buttonDagur"
        android:layout_marginTop="33dp"
        android:entries="@array/timi_array"
        android:paddingLeft="50dp"
        android:prompt="@string/timi_prompt" />

    <TextView
        android:id="@+id/timi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timi"
        android:layout_alignLeft="@+id/dagur"
        android:layout_marginBottom="14dp"
        android:text="@string/timi_text" />

</RelativeLayout>