<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    
    <TextView
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize= "20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp" />
    	
    <TextView
        android:id="@+id/nameOfClient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name" 
        android:textSize= "20dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/telephone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/name"
        android:text="@string/telephone" 
        android:textSize= "20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    
    <TextView
        android:id="@+id/telephoneClient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:layout_below="@id/nameOfClient"
        android:layout_toRightOf="@+id/telephone" 
        android:textSize= "20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/employee"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/telephone"
        android:text="@string/employee" 
        android:textSize= "20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/employeeName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/telephoneClient"
        android:layout_toRightOf="@+id/employee"
        android:textSize= "20dp" 
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/employee"
        android:text="@string/type"
        android:textSize= "20dp" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/typeName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/employeeName"
        android:layout_toRightOf="@+id/type"
        android:textSize= "20dp" 
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/height"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/type"
        android:text="@string/height"
        android:textSize= "20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/heightClient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeName"
        android:layout_toRightOf="@+id/height"
        android:textSize= "20dp" 
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/height"
        android:text="@string/date"
        android:textSize= "20dp" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/dateOfHaircut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightClient"
        android:layout_toRightOf="@+id/date"
        android:textSize= "20dp" 
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/date"
        android:text="@string/time" 
        android:textSize= "20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/timeOfHaircut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateOfHaircut"
        android:layout_toRightOf="@+id/time"
        android:textSize= "20dp" 
        android:layout_marginTop="10dp"/>
    
    <Button
        android:id="@+id/til_Baka"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/time"
        android:text="@string/tilBaka" 
        android:textSize= "20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/panta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeOfHaircut"
        android:layout_toRightOf="@+id/time"
        android:layout_alignParentRight="true"
        android:textSize= "20dp" 
        android:text="@string/confirm" 
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
