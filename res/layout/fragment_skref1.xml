<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="5dp"
    android:paddingTop="180dp"
    tools:context="folkmedhar.Skref1" >

    <LinearLayout
       android:id="@+id/linearLayout1"
       android:gravity="center"
       android:orientation="vertical"        
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/staff_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/textview_Skref3_starfsmadur"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:width="120dp" />

            <Spinner
                android:id="@+id/starfsmennSpinner"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/test_button_background"
                android:entries="@array/starfsmenn_array"
                android:paddingLeft="5dp"
                android:prompt="@string/starfsmenn_prompt"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/adgerd_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/textview_Skref3_adgerd"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/adgerdSpinner"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/test_button_background"
                android:entries="@array/adgerd_array"
                android:prompt="@string/adgerd_prompt"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/harlengd_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/textview_Skref3_harlengd"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/harlengdSpinner"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/test_button_background"
                android:entries="@array/harlengd_array"
                android:paddingLeft="5dp"
                android:prompt="@string/harlengd_prompt"
                android:spinnerMode="dialog" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/skref1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:ems="10"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:text="@string/title_activity_step1"
        android:textColor="@color/info_gray" />

    <Button
        android:id="@+id/next"
        style="@style/buttonStyleAfram"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skref1_text"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/afram" />

</RelativeLayout>